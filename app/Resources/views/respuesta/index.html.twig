{% extends 'base.html.twig' %}

{% block body %}

    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="alert alert-success">
            {{ flash_message }}
        </div>
    {% endfor %}
    {% for flash_message in app.session.flashBag.get('alert') %}
        <div class="alert alert-warning">
            {{ flash_message }}
        </div>
    {% endfor %}

    <div class="my-4"><img src="{{ asset('img/ccmlogo200x100.png') }}"> </div>

    <h2 class="">Consulta</h2>
    <p class="lead">¿Está usted de acuerdo con la transformación del Centro de Ciencias Matemáticas en un Instituto?</p>

    <div class="row justify-content-md-center mb-5">
        <div class="col-md-6 col-xs-12">
            <canvas id="doughnut-chart" width="600" height="350"></canvas>
        </div>
    </div>
    <div class="row justify-content-md-center mb-5">
        <div class="col-md-6 col-xs-12">
            <canvas id="bar-chart" width="600" height="450"></canvas>
        </div>
    </div>

    <h2 class="mb-4">Total de respuestas: {{ respuestas|length }}</h2>

    <h2 class="text-secondary mb-4"><i class="fa fa-comment"></i> Comentarios</h2>

    {% for respuesta in respuestas %}
        {% if respuesta.comentarios %}
            <div class="card mb-4">
                <div class="card-body">
                    <p class="">{{ respuesta.comentarios|nl2br }}</p>
                </div>
            </div>
        {% endif %}
    {% endfor %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/Chart.bundle.min.js') }}"></script>
    <script src="{{ asset('js/Chart.min.js') }}"></script>

    <script>
        new Chart(document.getElementById("doughnut-chart"), {
            type: 'doughnut',
            data: {
                labels: ["Si", "No", "Sin participación"],
                datasets: [
                    {
                        label: "Respuesta de los académicos",
                        // backgroundColor: ["#66BB6A", "#ef5350", "#FFEE58"],
                        fill: false,
                        backgroundColor: ["rgba(76,175,80,1)", "rgba(244,67,54,1)", "rgba(255,235,59,1)"],
                        data: [{{ si }},{{ no }},{{ na }}]
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Respuestas de los académicos'
                }
            }
        });

    </script>

    <script>
        new Chart(document.getElementById("bar-chart"), {
            type: 'bar',
            data: {
                labels: ["Si", "No", "Sin participación"],
                datasets: [
                    {
                        label: "Aprobación",
                        {#data: [{{ si }},{{ no }},{{ na }}]#}
                        data: [33, 56, 42],
                        fill: false,
                        backgroundColor: ["rgb(152, 251, 152, 0.2)", "rgba(255, 99, 132, 0.2)", "rgba(255, 205, 86, 0.2)"],
                        borderColor: ["rgb(136, 255, 97)", "rgb(255, 99, 132)", "rgba(255, 205, 86)"],
                        borderWidth: 1
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Respuestas de los académicos'
                },
                scales : {
                    "yAxes":[{
                        "ticks":{
                            "beginAtZero":true
                        }
                    }]
                }
            }
        });
    </script>
    <script>
        new Chart(document.getElementById("chartjs-1"),{
            "type":"bar",
            "data":{"labels":["January","February","March","April","May","June","July"],
                "datasets":[
                    {
